<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <form asp-controller="Blog" asp-action="AddComment">
        <div class="form-group">
            <label asp-for="@comment.Content" class="control-label"></label>
            <input asp-for="@comment.Content" class="form-control" />
            <span asp-validation-for="@comment.Content" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm:ss")" hidden asp-for="@comment.CommentDate" />
        </div>
        <div class="form-group">
            <input hidden value="@Model?.Id" asp-for="@comment.BlogId" />
        </div>
        <div class="form-group">
            <input hidden value="1" asp-for="@comment.AccountId" />
        </div>
        <button class="btn btn-primary" type="submit">AddComment</button>
    </form>
    <a asp-action="Index">Back to List</a>
</div>
